<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Tictactoe">
        <activity
            android:name=".tictactoegame.Multiplayer.Get_Player_Multiplayer_Activity"
            android:exported="false" />
        <activity
            android:name=".tictactoegame.OnlineWithRoom.Get_PlayerName_RoomActivity"
            android:exported="false" />
        <activity
            android:name=".tictactoegame.Multiplayer.MatchGameActivity"
            android:exported="false" />
        <activity
            android:name=".tictactoegame.Multiplayer.MultiplayerActivity"
            android:exported="false" />
        <activity
            android:name=".tictactoegame.AI.AIDifficultyActivity"
            android:exported="false" /> <!-- Multiplayer Activities -->
        <activity
            android:name=".tictactoegame.OnlineWithRoom.RoomplayerGameActivity"
            android:exported="false" />
        <activity
            android:name=".tictactoegame.OnlineWithRoom.JoinRoomActivity"
            android:exported="false" />
        <activity
            android:name=".tictactoegame.OnlineWithRoom.CreateRoomActivity"
            android:exported="false" />
        <activity
            android:name=".tictactoegame.OnlineWithRoom.OnlineRoomActivity"
            android:exported="false" /> <!-- Settings Activity -->
        <activity
            android:name=".tictactoegame.Setting.SettingsActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.SENDTO" />

                <data android:scheme="mailto" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity> <!-- AI Game Activities -->
        <activity
            android:name=".tictactoegame.AI.AiGameActivity"
            android:exported="false" />
        <activity
            android:name=".tictactoegame.AI.AiChooseSymbolActivity"
            android:exported="false" />
        <activity
            android:name=".tictactoegame.AI.AIGetPlayerNameActivity"
            android:exported="false" /> <!-- Offline Game Activities -->
        <activity
            android:name=".tictactoegame.TwoPlayer.OfflineGameActivity"
            android:exported="false" />
        <activity
            android:name=".tictactoegame.TwoPlayer.ChooseSymbolActivity"
            android:exported="false" />
        <activity
            android:name=".tictactoegame.TwoPlayer.OfflineGetPlayersNamesActivity"
            android:exported="false" /> <!-- Launcher Activity (Use main app theme instead of AppCompat) -->
        <activity
            android:name=".tictactoegame.OfflineGameMenuActivity"
            android:exported="true"
            android:theme="@style/Base.Theme.Tictactoe">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>