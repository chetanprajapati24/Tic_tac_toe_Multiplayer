<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- App Base Theme -->
    <style name="Base.Theme.Tictactoe" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary brand color (Blue for X) -->
        <item name="colorPrimary">#2196F3</item> <!-- Mid blue -->
        <item name="colorPrimaryVariant">#1976D2</item> <!-- Darker blue -->
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color (Yellow-Red for O) -->
        <item name="colorSecondary">#FF9800</item> <!-- Warm orange -->
        <item name="colorSecondaryVariant">#F44336</item> <!-- Reddish tone -->
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor" tools:targetApi="l" tools:ignore="ObsoleteSdkInt">?attr/colorPrimaryVariant</item>
    </style>

    <!-- AppCompat fallback theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#1976D2</item>
        <item name="colorAccent">#FF9800</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <!-- Splash animation theme -->
    <style name="AppTheme.CenterAnimation">
        <item name="android:windowBackground">@drawable/splash_src</item>
    </style>

    <!-- Duplicate theme if needed -->
    <style name="Theme.Tictactoe" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#2196F3</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">#FF9800</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

</resources>
