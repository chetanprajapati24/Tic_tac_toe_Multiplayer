<resources>
    <!-- Style for Offline Menu Buttons -->
    <style name="OfflineMenuButton">
        <item name="android:layout_width">175dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_xo_gradient</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:scaleX">0</item>
        <item name="android:scaleY">0</item>
    </style>
</resources>
