<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- App Base Theme for Night Mode -->
    <style name="Base.Theme.Tictactoe" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary brand color (X - dark blue) -->
        <item name="colorPrimary">#1565C0</item> <!-- Deep blue -->
        <item name="colorPrimaryVariant">#0D47A1</item> <!-- Even darker blue -->
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color (O - warm gradient tones) -->
        <item name="colorSecondary">#F57C00</item> <!-- Dark orange -->
        <item name="colorSecondaryVariant">#D32F2F</item> <!-- Deep red -->
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background -->
        <item name="android:windowBackground">#121212</item> <!-- Dark gray-black -->

        <!-- Status bar -->
        <item name="android:statusBarColor" tools:targetApi="l" tools:ignore="ObsoleteSdkInt">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Optional fallback theme -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">#1565C0</item>
        <item name="colorPrimaryDark">#0D47A1</item>
        <item name="colorAccent">#F57C00</item>
        <item name="android:windowBackground">#121212</item>
    </style>

    <!-- Splash animation theme -->
    <style name="AppTheme.CenterAnimation">
        <item name="android:windowBackground">@drawable/splash_src</item>
    </style>

    <!-- Duplicate usable night theme -->
    <style name="Theme.Tictactoe" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#1565C0</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">#F57C00</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

</resources>
