<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_img"
    android:weightSum="10"
    tools:context=".tictactoegame.TwoPlayer.OfflineGetPlayersNamesActivity">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8.5" />
    </LinearLayout>

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5" />

    <!-- Player One Layout -->
    <LinearLayout
        android:id="@+id/player_one_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5.5"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:weightSum="10">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="40dp"
            android:gravity="center_vertical"
            android:text="@string/player_one"
            android:textSize="20sp"
            android:textColor="#5C5C5C"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_regular"
            android:textAllCaps="false" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5" />

        <EditText
            android:id="@+id/player_one_name_edttxt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:layout_marginHorizontal="40dp"
            android:hint="Nick Name"
            android:singleLine="true"
            android:maxLength="10"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:cursorVisible="true"
            android:textColor="#5C5C5C"
            android:textColorHint="#6E6E6E"
            android:background="@drawable/edittext_bg"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/player_one_btn"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="95dp"
            android:gravity="center"
           style="@style/OfflineMenuButton"
            android:scaleX="1"
            android:scaleY="1"
            android:text="Next"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_medium"
            android:textAllCaps="false" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2" />
    </LinearLayout>

    <!-- Player Two Layout (Initially Hidden) -->
    <LinearLayout
        android:id="@+id/player_two_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5.5"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:weightSum="10">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="40dp"
            android:gravity="center_vertical"
            android:text="@string/player_two"
            android:textSize="20sp"
            android:textColor="#4C4C4C"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_regular"
            android:textAllCaps="false" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5" />

        <EditText
            android:id="@+id/player_two_name_edttxt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:layout_marginHorizontal="40dp"
            android:hint="Nick Name"
            android:singleLine="true"
            android:maxLength="10"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:cursorVisible="true"
            android:textColor="#5C5C5C"
            android:textColorHint="#6E6E6E"
            android:background="@drawable/edittext_bg"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/player_two_btn"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="95dp"
            android:gravity="center"
            style="@style/OfflineMenuButton"
            android:scaleX="1"
            android:scaleY="1"
            android:text="Next"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_medium"
            android:textAllCaps="false" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2" />
    </LinearLayout>

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />
</LinearLayout>
